<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/activity_select_arrival_check_method"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/frame2"
    android:orientation="vertical"
    tools:context="com.android.hacklikeagirl.gottheresafemom.provider.SelectArrivalCheckMethod">

    <TextView
        android:id="@+id/text_select_check_method"
        style="@style/Heading"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".3"
        android:gravity="center"
        android:padding="12dp"
        android:text="How do you want your\nfamily and friends\nnotified?"
        android:textAllCaps="false"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_weight=".7"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/sharebac_dim_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#C0000000"
                android:visibility="gone" >
            </RelativeLayout>

            <Button
                android:layout_marginTop="46dp"
                android:background="@color/colorButtons"
                android:id="@+id/button_determine_by_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="26dp"
                android:elevation="3dp"
                android:text="When I reach the location" />

            <Button
                android:elevation="3dp"
                android:layout_marginBottom="26dp"
                android:background="@color/colorButtons"
                android:id="@+id/button_determine_by_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="At a specific time" />

            <Button
                android:elevation="3dp"
                android:background="@color/colorButtons"
                android:id="@+id/button_determine_by_flightnr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="When my flight arrives" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>